                </builtin>
                <propertiesPolicy>
                    <properties>
                        <property>
                            <name>dds.discovery.static_edp.exchange_format</name>
                            <value>v1_Reduced</value>
                        </property>
                    </properties>
                </propertiesPolicy>
            </rtps>
        </participant>
    
